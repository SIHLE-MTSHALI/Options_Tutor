# Options Tutor Environment Configuration
# Copy this file to .env and update the values
# Run 'npm run setup-env' for interactive setup

# Application Environment
# Options: development, production, test
NODE_ENV=development

# Electron Configuration
# Enable Electron development mode
ELECTRON_IS_DEV=true

# Alpha Vantage API Configuration
# Get your free API key from: https://www.alphavantage.co/support/#api-key
# Demo key provides limited functionality
ALPHA_VANTAGE_API_KEY=demo

# API Configuration
# Base URL for API endpoints (optional)
API_BASE_URL=https://api.optionstutor.com

# Feature Flags
# Enable real-time market data fetching
ENABLE_REAL_TIME_DATA=true

# Enable backtesting features
ENABLE_BACKTESTING=true

# Enable advanced trading features
ENABLE_ADVANCED_FEATURES=true

# Enable usage analytics (anonymous)
ENABLE_ANALYTICS=false

# Debug and Logging
# Debug namespace patterns (comma-separated)
DEBUG=options-tutor:*

# Application log level
# Options: error, warn, info, debug, trace
LOG_LEVEL=info

# Data Storage
# Custom path for data storage (optional, leave empty for default)
DATA_STORAGE_PATH=

# Performance Settings
# Maximum concurrent API requests (1-10)
MAX_CONCURRENT_REQUESTS=5

# API request timeout in milliseconds (5000-120000)
REQUEST_TIMEOUT=30000

# Security Settings
# Enable security headers
ENABLE_SECURITY_HEADERS=true

# Development Settings
# Enable hot reload in development
HOT_RELOAD=true

# Open DevTools on startup (development only)
OPEN_DEVTOOLS=false